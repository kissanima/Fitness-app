    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/challengeBadge"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
